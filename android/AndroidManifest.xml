<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boliao.eod"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0">

    <!-- only show app in store to users with the following -->
    <!-- <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true" /> -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- TODO NDK 3: permissions for camera -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera2"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-feature android:name="android.hardware.camera.front"/>
    <uses-feature android:name="android.hardware.camera.front.autofocus"/>

    <!-- TODO RECEIVERS 0: add RECEIVE_BOOT_PERMISSIONS -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <!-- TODO NETWORK 0: add INTERNET permissions -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/GdxTheme">

        <!-- TODO RECEIVERS 0: declare static OnBootReceiver w BOOT_COMPLETED intent-filter -->
        <!-- TODO note that this app still needs to be manually launched once to register receiver in system -->
        <receiver
            android:name=".OnBootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- TODO SERVICES: declare the GameStateService and IntentService -->
        <!-- Q: What are the big 4 tags? -->
        <service
            android:name=".GameStateService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AndroidLauncher"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor">
        </activity>

    </application>

</manifest>